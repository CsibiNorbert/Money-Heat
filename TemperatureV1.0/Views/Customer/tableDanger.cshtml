<div id="table">
    <table class="table table-responsive table-hover">
        <thead class="thead-dark">
        <th>Temperature </th>
        <th>Danger </th>

        </thead>


        @if (ViewBag.DailyTemp > 24)
        {
            <div id="alert" class="alert alert-danger">
                <strong>Temperature Danger!</strong> The temperature is too <strong>HIGH</strong>
                <p>> 24&#8451; - Cardiovascular risk</p>
            </div>
        }
         else if (ViewBag.DailyTemp <= 16)
    {
        <div class="alert alert-warning">
            <strong>Temperature Warning!</strong> The temperature is too <strong>LOW</strong>
            <p>> 18&#8451; - 16&#8451; - Respiratory risk</p>
        </div>
    }
