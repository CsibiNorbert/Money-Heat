    }*@

        @if (ViewBag.DailyTemp > 24)
        {
            var x = ViewBag.DailyTemp;

            <tbody>
            <tr class="table-danger">
                <td>@x.ToString()</td>
                <td>HIGH</td>

            </tr>
            </tbody>
        }
    </table>
</div>

